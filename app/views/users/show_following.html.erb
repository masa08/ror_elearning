<%= render 'layouts/header' %>
<div class="container pt50">
    <div class="row">
      <div class="col-lg-4">
          <div class="user_details">
              <div class="thumbnail">
                  <%= image_tag @user.image.url, class: "user_image" %>
              </div>
              <p>Name: <%= @user.name  %></p>
              <p>Email: <%= @user.email  %></p>

          </div>
      </div>

      <div class="user_activity col-lg-8 text-center">
          <h2 class="text-center wf-mplus1p mb-4 gradient-border font-weight-light">Following</h2>
          <% @users.each do |user| %>
              <%= link_to user_path(user.id) do %>
              <div class="card flex-md-row mb-4 box-shadow h-md-250 card-height">
                  <div class="col-lg-4">
                      <%= image_tag user.image.url, class: "user_index_image" %>
                  </div>
                  <div class="card-body d-flex flex-column align-items-start col-lg-8">
                      <p>Name:<%= user.name  %></p>
                  </div>
              </div>
              <% end %>
          <% end %>
          <%= will_paginate(:renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer)  %>
      </div>
    </div>
</div>
<%= render 'layouts/footer' %>
