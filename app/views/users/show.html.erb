<%= render 'layouts/header' %>
<div class="user_main_image">
  <h1 class="user_title">DashBoard</h1>
</div>
<div class="container pt50">
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <div class="row">
        <div class="col-lg-4">
            <div class="user_details">
                <div class="thumbnail">
                    <%= image_tag @user.image.url, class: "user_image" %>
                </div>
                <p>Name: <%= @user.name  %></p>
                <p>Email: <%= @user.email  %></p>
                <%= link_to lessons_path(user_id: @user.id) do %>
                    <p>lessons: <%= @lesson_users.count %></p>
                <% end %>
                <p>Words_Numbers: <%= @word_count %></p>
                <%= render 'users/stats' %>
                <% if @user.id == current_user.id %>
                    <%= link_to 'Profile Edit', edit_user_path(current_user), class: "btn btn-outline-secondary edit_btn" %>
                <% else %>
                    <%= render 'users/follow_form' %>
                <% end %>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="user_activity">
                <h2 class="text-center wf-mplus1p mb-4 gradient-border font-weight-light">Activities</h2>
                    <div class="card-body">
                        <p style="margin-bottom: 10px;">Study Progress</p>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-primaty" role="progressbar"
                             style="width: <%= @lessons_learned.count.to_f / @category.count.to_f * 100 %>%" aria-valuemin="0"
                              aria-valuemax="100"><%= @lessons_learned.count.to_f / @category.count.to_f * 100 %>%</div>
                        </div>
                    </div>
                <% @lesson_users.each do |lesson| %>
                <div class="col-md-12">
                    <div class="card flex-md-row mb-4 box-shadow h-md-250">
                        <div class="card-body">
                            <div class="col-lg-4 left">
                                <%= image_tag lesson.user.image.url, class: "user_image_small" %>
                            </div>
                            <div class="card-text col-md-8">
                                <p class="card-text"><%= lesson.user.name %> finished <%= lesson.category.title %></p>
                                <p><%= lesson.created_at %></p>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
            <%= will_paginate @lesson_users, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer%>
            </div>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>
