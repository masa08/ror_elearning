<%= render 'admin/header' %>
<div class="container-fluid">
    <div class="row">
        <%= render 'admin/sidebar' %>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <h2>Words</h2>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Content</th>
                            <th>Category</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @words.each do |word| %>
                            <tr>
                                <td><%= word.id %></td>
                                <td><%= word.content %></td>
                                <td><%= word.category.title %></td>
                                <td></td>
                                <td></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>
