<%= render 'admins/header' %>

<div class="container-fluid">
  <div class="row">
    <%= render 'admins/sidebar' %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

      <h2>Word_answers</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th></th>
              <th>Answers</th>
              <th>Word</th>
              <th>Category</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @word_answers.each do |answer| %>
            <tr>
              <td><%= answer.id %></td>
              <td><%= answer.content %></td>
              <td><%= answer.word.content %></td>
              <td><%= answer.word.category.title %></td>
              <td><%= answer.word.category.description %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>
